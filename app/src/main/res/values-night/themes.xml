<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SongOfTheDay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_tertiary50</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_tertiary20</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/MenuItemTextAppearance</item>
    </style>
 <!-- https://itecnote.com/tecnote/android-menu-item-text-color-in-theme/ -->
    <style name="MenuItemTextAppearance">
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>